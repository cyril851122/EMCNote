<Window x:Class="EMCNote.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="EMCNote" Height="600" Width="800"  ResizeMode="CanResize" WindowStyle="SingleBorderWindow">
	<Window.Background>
		<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
			<GradientStop Color="White" Offset="0"></GradientStop>
    		<GradientStop Color="LightBlue" Offset="1"></GradientStop>
		</LinearGradientBrush>
	</Window.Background>
	<DockPanel>
		<Menu DockPanel.Dock="Top">
  			<MenuItem Header="EMC">
				<MenuItem  Header="Open"></MenuItem>
				<MenuItem  Header="Exit" Click="menuExitClick"></MenuItem>
			</MenuItem>
			<MenuItem Header="Note">
				<MenuItem  Header="New Note" Click="menuNewNoteClick"></MenuItem>
			</MenuItem>
			<MenuItem Header="Book">
				<MenuItem  Header="New Book" Click="menuNewNoteClick"></MenuItem>
			</MenuItem>
			<MenuItem Header="     Demo     " IsEnabled="False">
			</MenuItem>
			<MenuItem Header="Help"></MenuItem>
		</Menu>
		<TreeView Name="tv_book">
		</TreeView>
	</DockPanel>
</Window>