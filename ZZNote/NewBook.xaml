<Window x:Class="ZZNote.NewBook"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Input the new book name" Height="120" Width="300" WindowStyle="ToolWindow" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Loaded="Window_Loaded">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="55"/>

			<RowDefinition Height="40" />
		</Grid.RowDefinitions>
		<StackPanel Orientation="Horizontal" Grid.Row="0" Margin="20,20,20,10">
			<TextBox Name="tb_bookname" Width="250"></TextBox>
		</StackPanel>
		
		<Grid Grid.Row="1" Margin="50,0,50,20">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<Button IsDefault="True" Click="OK_Click" Grid.Column="0">OK</Button>
			<Button Click="Cancel_Click" Grid.Column="2">Cancel</Button>
		</Grid>
	</Grid>
</Window>