<Window x:Class="ZZNote.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ZZNote" Height="300" Width="400" WindowStyle="None" ResizeMode="NoResize" Background="White"
        WindowStartupLocation="CenterOwner" MouseDoubleClick="Window_MouseDoubleClick">
	<Border>
		<Border.Background>
			<ImageBrush ImageSource="res/about_bg.jpg" Opacity="0.3" Stretch="Fill"></ImageBrush>
		</Border.Background>
		<FlowDocumentScrollViewer VerticalScrollBarVisibility="Auto">
			<FlowDocumentScrollViewer.Document>
				<FlowDocument FontSize="14">
					<Paragraph TextAlignment="Center" FontSize="20" FontWeight="Bold">ZZNote</Paragraph>
					<Paragraph>
						<Image Source="res/help.png" Width="20" Height="20"></Image>
						#INTRODUCTION#
					</Paragraph>
					<Paragraph>
						<Hyperlink NavigateUri="mailto:cyril851122@163.com"	RequestNavigate="Hyperlink_RequestNavigate">Mail Me</Hyperlink>
					</Paragraph>
					<Paragraph>
						<Hyperlink NavigateUri="https://github.com/cyril851122/ZZNote" RequestNavigate="Hyperlink_RequestNavigate">https://github.com/cyril851122/ZZNote</Hyperlink>
					</Paragraph>
					<Paragraph TextAlignment="Center"> * Double click to close *</Paragraph>
				</FlowDocument>
			</FlowDocumentScrollViewer.Document>
		</FlowDocumentScrollViewer>
	</Border>
</Window>